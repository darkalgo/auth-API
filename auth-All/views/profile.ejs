<!-- views/success.ejs -->
<!doctype html>
<html>
  <head>
    <title><%= user.socialName %> SignIn</title>
    <link rel="stylesheet" href="./css/materialize.min.css"> 
    <link rel="stylesheet" href="./css/icon.css">
    <link rel="stylesheet" href="./css/style.css">
  </head>
  <body>
  <div class="customContainer">
    <div class="row">
      <div class="col s12 m12">
        <div class="card center-align hoverable waves-light lighten-1">
          <a class="right" href="/logout"><input type="button" class="btn" value="Logout"></a>

          <div class="card-content black-text">
            <span class="card-title">
              <div class="center"> 
                <img class="logoDesign" src=<%= user.socialImg %> alt=""> 
              </div>
            </span>
            <br>
            <div class="row">
              <div class="col s12 m6">
                    <img class="responsive-img" src=<%= user.picture %> alt="">
              </div>
              <div class="col s12 m6">
                <div class="card center-align">           
                  <div class="card-content"> 
                    <table class="highlight">
                      <tr>
                        <td><h6>Email:</h6> </td>
                        <td><%= user.email %></td>
                      </tr>
                      <tr>
                        <td><h6>Name:</h6> </td>
                        <td><%= user.name %></td>
                      </tr>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>